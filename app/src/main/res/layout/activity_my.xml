<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_open"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_margin="3dp"
            android:layout_gravity="start"
            android:background="@drawable/outline_dehaze_black_24dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="100dp"
        >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#ECFDD8"
            android:foreground="@drawable/person" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ECFDD8"
                android:fontFamily="@font/custom_font_family"
                android:gravity="bottom"
                android:text="  ECOding"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ECFDD8"
                android:fontFamily="@font/custom_font_family"
                android:text="   마일리지 : 500pt"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="250dp">

        <Button
            android:id="@+id/btn_bookmark"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ECFDD8"
            android:drawableLeft="@drawable/outline_star_border_black_24dp"
            android:fontFamily="@font/custom_font_family"
            android:gravity="center_vertical"
            android:text=" 북마크"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:textSize="25dp" />


        <Button
            android:id="@+id/btn_mywriting"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ECFDD8"
            android:drawableLeft="@drawable/outline_star_border_black_24dp"
            android:fontFamily="@font/custom_font_family"
            android:gravity="center_vertical"
            android:text=" 내가 쓴 글"
            android:textColor="#000000"
            android:layout_marginBottom="1dp"
            android:textSize="25dp" />

        <Button
            android:id="@+id/button18"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#ECFDD8"
            android:drawableLeft="@drawable/outline_star_border_black_24dp"
            android:fontFamily="@font/custom_font_family"
            android:gravity="center_vertical"
            android:text=" 회원 정보 수정"
            android:textColor="#000000"
            android:textSize="25dp" />


    </LinearLayout>

    <include layout="@layout/activity_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>